<style>
  @import url('https://fonts.googleapis.com/css2?family=Croissant+One&family=Inter:wght@200;300;400;500;600;700;800;900&family=Mulish:wght@300;400;500;600;700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300&display=swap');
*{ font-family: 'Poppins', sans-serif;}

header{
    width: 100%;
    height: 120px;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0px 100px;
    
}
header .brand{
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: start;
    gap: 20px;
}

nav{
    display: flex;
    gap: 30px;
}

nav a{
    text-decoration: none;
    padding: 10px 20px;
    background: #fff;
    /* box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px; */
    border-radius: 25px;
    color: #333;
    transition:.2s;
}
nav a:hover{
    box-shadow: rgba(149, 157, 165, 0.2) 0px 16px 48px;
}

.wrapper-brand{
    width: 400px;
}

.wrapper-brand .Ep{
    font-size: 25px;
    font-weight: 900;
    color:#48758c;
}

.Er p{
    font-size: 14px;
    font-weight: 300;
    font-style: italic;
    color:#333;
}
.wrapper-profil{
  position: relative;
  box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
  padding:40px;
  margin-bottom:300px;
}

.wrapper-profil form{
  padding:40px;
}


.file-input-container {
  width: 100%;
}

.file-input-container label {
  display: inline-block;
  cursor: pointer;
}



.file-input-container label img{
  width:150px;
  height:150px;
  border-radius:50%;
  cursor:pointer;
  transition:.3s;
  border:1px solid #ccc;
  margin-bottom: 20px;
}

.file-input-container input[type="file"] {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  width:100%;
  height:100%;
  cursor: pointer;
}

.file-input-container .file-label {
  position:relative;
  width:150px;
  height:50px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f1f1f1;
  border-radius: 4px;
  padding: 8px;
  margin-top: 8px;
  cursor: pointer;
}

.file-input-container .file-label-text{
  margin:0;
}


.btn-submit-profil{
    border:0;
    width:200px;
    height:45px;
    background-color:#5890ac;
    color:#fff;
    border-radius: 2px;
    transition:.3s;
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    margin-top:-5px;
    position:absolute;
    bottom:30px;
    right:30px;
}

.btn-submit-profil:hover{
  background-color:#40697d;
    color:#fff;
}

.a-submit-profil{
  padding:10px 20px;
  background: #FFFFFF;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25), 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 3px;
  transition:.3s;
  font-family: 'Poppins';
  font-style: normal;
  font-weight: 600;
  font-size: 18px;
  text-decoration: none;
  color:#252525;
  border:2px solid #252525;
  position: absolute;
  bottom:30px;
  right:30px;
}

.a-submit-profil:hover{
  background: #000;
  color:#fff;
}
</style>
<div class="wrapper-profil">
  <form action="/beri-nilai" method="POST">
  <input type="hidden" name="id_upload" value="<%= id_upload %>"
  >
  <input type="hidden" name="id_user" value="<%= id_user %>"
  >
  <div class="row mb-3">
    <label for="grade" class="col-sm-2 col-form-label">Nilai</label>
    <div class="col-sm-5">
      <input value="<%= grades && grades.grade ? grades.grade : '' %>"

      name="grade" class="form-control" type="text">
    </div>
  </div>
  <div class="row mb-3">
    <label for="feedback" class="col-sm-2 col-form-label">Feedback</label>
    <div class="col-sm-5">
      <input value="<%= grades && grades.feedback ? grades.feedback : '' %>"
      name="feedback" type="text" class="form-control" id="feedback">
    </div>
  </div>
    <div class="col-sm-2">
      <% if(!grades) {%>
        <button type="submit" class="btn-submit-profil">Save</button>
      <% } else {%>
        <button type="submit" class="btn-submit-profil">Save changes</button>
      <% } %>
    </div>
</form>
</div>